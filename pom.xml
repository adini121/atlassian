<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.atlassian.pom</groupId>
		<artifactId>atlassian-public-pom</artifactId>
		<version>14</version>
	</parent>

	<groupId>com.atlassian.selenium</groupId>
	<artifactId>atlassian-selenium</artifactId>
	<version>1.0-SNAPSHOT</version>
	<description>
		A suite of tools to help with Selenium test harness, assertions
		etc.
	</description>

    <scm>
        <connection>scm:svn:https://studio.atlassian.com/svn/SELENIUM/trunk/</connection>
        <developerConnection>scm:svn:https://studio.atlassian.com/svn/SELENIUM/trunk/</developerConnection>
        <url>https://studio.atlassian.com/svn/SELENIUM/trunk/</url>
    </scm>

    <dependencies>
	    <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.7</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.openqa.selenium.client-drivers</groupId>
            <artifactId>selenium-java-client-driver</artifactId>
            <version>0.9.2</version>
        </dependency>
    </dependencies>

    <issueManagement>
        <system>Jira</system>
        <url>https://studio.atlassian.com/browse/SELENIUM</url>
    </issueManagement>
    
    <ciManagement>
        <system>Bamboo</system>
        <url>
            http://bamboo.developer.atlassian.com/browse/ATLASSIAN_SELENIUM
        </url>
    </ciManagement>

    <distributionManagement>
        <site>
            <id>atlassian-documentation</id>
            <url>dav:https://docs.atlassian.com/${project.artifactId}/${project.version}</url>
        </site>
    </distributionManagement>
</project>